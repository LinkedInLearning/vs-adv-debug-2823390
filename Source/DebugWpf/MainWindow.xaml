<Window x:Class="DebugWpf.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:local="clr-namespace:DebugWpf"
				mc:Ignorable="d"
				Title="MainWindow"
				Width="700"
				FontSize='14'>
	<StackPanel Margin='80,50'
							HorizontalAlignment='Stretch'>
		<TextBlock Text='Calculate Loan Payments     '
							 FontSize='22' />
		<Button Content='Step Through Functions'
						Click='Button_Click' />
		<Button Content='Clear Lists'
						Click='ClearButton_Click' />
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width='259*' />
				
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>
			<ListBox x:Name='ResultsListBox'
							 Margin='20'
							 MinHeight='120'>
			
			</ListBox>
		</Grid>
	</StackPanel>
</Window>

  